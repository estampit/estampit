# Environment variables for MYSTAMP

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database
DATABASE_URL=your_supabase_db_url

# Authentication
JWT_SECRET=your_jwt_secret
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@mystamp.app

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Apple Wallet
APPLE_WALLET_TEAM_ID=your_apple_team_id
APPLE_WALLET_PASS_TYPE_ID=pass.com.mystamp.loyalty
APPLE_WALLET_KEY_ID=your_key_id

# Google Wallet
GOOGLE_WALLET_ISSUER_ID=your_google_wallet_issuer_id
GOOGLE_WALLET_SERVICE_ACCOUNT=path/to/service-account.json

# Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
MIXPANEL_TOKEN=your_mixpanel_token

# Expo (Mobile App)
EXPO_PROJECT_ID=your_expo_project_id
EAS_PROJECT_ID=your_eas_project_id

# App Configuration
APP_NAME=MYSTAMP
APP_URL=https://mystamp.app
API_URL=https://api.mystamp.app

# Redis (Caching)
REDIS_URL=your_redis_url

# Environment
NODE_ENV=development